<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@color/windowbackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HorizontalDividingLineTextStyle">
        <item name="android:background">@color/viewfinder_mask</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="HorizontalDividingLineSmallTextStyle">
        <item name="android:background">@color/viewfinder_mask</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="VerticalDividingLineTextStyle">
        <item name="android:background">@color/alpahBlack</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.5dp</item>
    </style>
    //文字居中
    <style name="TextCenterStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    //生活圈文字白色样式
    <style name="TextLifeCircleStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    //生活圈文字白色样式
    <style name="TextDrawableLifeCircleStyle">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextDrawableCenterStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextPaddingStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">5dp</item>
    </style>
    //用户信息左边Text
    <style name="TextUserInfoLeftStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    //用户信息右边Text
    <style name="TextUserInfoRightStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center|right</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    //计算器按钮
    <style name="ButtonCalcuatorStyle">
        <item name="android:textColor">@color/translucent</item>
        <item name="android:background">@drawable/btn_calcuator</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">30sp</item>
    </style>


</resources>
