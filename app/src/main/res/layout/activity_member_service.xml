<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_member_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apple.jialianmerchant.ui.MemberServiceActivity">

    <include layout="@layout/item_title_back_text" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:text="扫一扫就有核销"
        android:background="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/orange_color"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:text="在首页收款扫描用户的二维码也可以自动核销他们的订单"
        android:gravity="center"
        android:lines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    <TextView
        android:paddingLeft="10dp"
        android:text="历史服务"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <ImageView
        android:src="@mipmap/iconfont_cellright"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:scaleType="fitEnd"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
