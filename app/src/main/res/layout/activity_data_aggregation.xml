<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.apple.jialianmerchant.ui.DataAggregationActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/adta_aggregation">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_write_back" />

        <TextView
            android:id="@+id/tv_sub_title"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="subtitle" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            style="@style/HorizontalDividingLineTextStyle"
            android:layout_alignBottom="@+id/tv_title" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/adta_aggregation"
        android:gravity="center|bottom"
        android:text="0.00"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:id="@+id/tv_total_paymoney" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/adta_aggregation"
        android:gravity="center|top"
        android:text="商家实收(元)"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_alipay_val"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/adta_aggregation2"
        android:paddingLeft="5dp"
        android:text="支付宝支付服务费:商家实收的0%"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_wxpay_val"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/adta_aggregation2"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:text="微信支付服务费:商家实收的0%"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="订单笔数 (笔)" />

        <TextView
            android:id="@+id/tv_trade_count"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="0" />

        <TextView
            android:id="@+id/text1"
            style="@style/HorizontalDividingLineTextStyle"
            android:layout_below="@+id/tv_trade_count" />

        <TextView
            android:id="@+id/tv_trade_money"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text1"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/text1"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="订单金额 (笔)" />

        <TextView
            android:id="@+id/text2"
            style="@style/HorizontalDividingLineTextStyle"
            android:layout_below="@+id/tv_trade_money" />

        <TextView
            android:id="@+id/tv_total_inmoney"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text2"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="0" />

        <TextView
            style="@style/HorizontalDividingLineTextStyle"
            android:layout_below="@+id/tv_total_inmoney" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/text2"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="实收净额 (笔)" />

    </RelativeLayout>
</LinearLayout>
