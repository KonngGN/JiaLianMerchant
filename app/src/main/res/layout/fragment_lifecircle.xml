<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/result_view"
    tools:context="com.example.apple.jialianmerchant.fragement.LifeCircleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TextDrawableLifeCircleStyle"
                android:drawableLeft="@mipmap/home_cumulative"
                android:text="今日累计(元)" />

            <TextView
                style="@style/TextLifeCircleStyle"
                android:text="0" />

            <TextView style="@style/HorizontalDividingLineTextStyle" />

            <TextView
                android:id="@+id/textView"
                style="@style/TextDrawableLifeCircleStyle"
                android:drawableLeft="@mipmap/home_lifecircle_yesterday"
                android:text="昨日收入(元)" />

            <TextView
                style="@style/TextLifeCircleStyle"
                android:text="0" />

        </LinearLayout>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="140dp"
            android:background="@color/viewfinder_mask" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TextDrawableLifeCircleStyle"
                android:drawableLeft="@mipmap/home_cumulative"
                android:text="会员卡余额(元)" />

            <TextView
                style="@style/TextLifeCircleStyle"
                android:text="0" />

            <TextView style="@style/HorizontalDividingLineTextStyle" />

            <TextView
                style="@style/TextDrawableLifeCircleStyle"
                android:drawableLeft="@mipmap/home_lifecircle_yesterdayrank"
                android:text="昨日排名" />

            <TextView
                style="@style/TextLifeCircleStyle"
                android:text="0" />

        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/textView2"
        style="@style/TextLifeCircleStyle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:text="您还没有新的订单!" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@mipmap/home_open_up" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/home_notcontent_icon" />
</RelativeLayout>
