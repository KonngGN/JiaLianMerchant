<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_to_details"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/tv_bill_reconciliationr_time"
        android:text="周三\n01-18"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_bill_buyer_headpic"
        android:src="@mipmap/livingarea_public"
        android:layout_toRightOf="@+id/tv_bill_reconciliationr_time"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <ImageView
        android:src="@mipmap/livingcircle_bill_payment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/iv_bill_buyer_headpic"
        android:layout_toEndOf="@+id/iv_bill_buyer_headpic"/>

    <ImageView
        android:src="@mipmap/book_alipay_icon"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_bill_paytype"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:text="周润发"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/tv_bill_buyer_name"
        android:layout_toRightOf="@+id/iv_bill_buyer_headpic"/>

    <TextView
        android:text="4.00"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:id="@+id/tv_bill_trade_money"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />
</RelativeLayout>