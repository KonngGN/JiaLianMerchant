<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/alerdialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_alertdialog_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/alphaAll"
            android:gravity="center"
            android:singleLine="true"
            android:text="联系客服"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_kefu_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_button"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/alphaAll"
            android:gravity="center"
            android:text="14725836914"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/et_alertdialog_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_alertdialog_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/et_blank_bg"
            android:inputType="phone"
            android:maxLength="11"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/ll_button"
            android:background="@color/gray_bg_color" />


        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/et_alertdialog_phone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alphaAll"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/mainColor"
                android:textSize="17sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_bg_color" />

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alphaAll"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/mainColor"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
